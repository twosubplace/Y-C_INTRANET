<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ync.schedule.mapper.EmailTemplateMapper">

    <resultMap id="EmailTemplateResultMap" type="com.ync.schedule.domain.EmailTemplate">
        <id property="id" column="id"/>
        <result property="templateName" column="template_name"/>
        <result property="subject" column="subject"/>
        <result property="content" column="content"/>
        <result property="description" column="description"/>
        <result property="isActive" column="is_active"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findAll" resultMap="EmailTemplateResultMap">
        SELECT * FROM email_templates
        ORDER BY template_name
    </select>

    <select id="findById" resultMap="EmailTemplateResultMap">
        SELECT * FROM email_templates
        WHERE id = #{id}
    </select>

    <select id="findByTemplateName" resultMap="EmailTemplateResultMap">
        SELECT * FROM email_templates
        WHERE template_name = #{templateName}
    </select>

    <select id="findByIsActiveTrue" resultMap="EmailTemplateResultMap">
        SELECT * FROM email_templates
        WHERE is_active = 1
        ORDER BY template_name
    </select>

    <insert id="insert" parameterType="com.ync.schedule.domain.EmailTemplate">
        <selectKey keyProperty="id" resultType="long" order="BEFORE">
            SELECT email_templates_seq.NEXTVAL FROM dual
        </selectKey>
        INSERT INTO email_templates (id, template_name, subject, content, description, is_active, created_at, updated_at)
        VALUES (#{id}, #{templateName}, #{subject}, #{content}, #{description}, #{isActive}, CURRENT_TIMESTAMP, CURRENT_TIMESTAMP)
    </insert>

    <update id="update" parameterType="com.ync.schedule.domain.EmailTemplate">
        UPDATE email_templates
        SET template_name = #{templateName},
            subject = #{subject},
            content = #{content},
            description = #{description},
            is_active = #{isActive},
            updated_at = CURRENT_TIMESTAMP
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM email_templates WHERE id = #{id}
    </delete>

</mapper>
